@using Microsoft.AspNetCore.Identity
@using Cinema.DAL.Models
@using Cinema.COMMON.Constants
@using Cinema.BLL.Helpers.Genre

@inject SignInManager<ApplicationUser> SignInManager
@inject IGenresHelper genresHelper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Movies Demo</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/slick.css" />
    <link rel="stylesheet" href="~/css/slick-theme.css" />
    <link rel="stylesheet" href="~/css/icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-toggleable-lg fixed-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="icon-menu"></span>
            </button>
            <a class="navbar-brand pl-0" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.svg" alt="Logo" class="logo" loading="lazy"
                     decoding="async">
            </a>

            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link text-light" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Genres
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <div class="dropdown-multicol d-flex justify-content-between">
                                @{
                                    var genres = genresHelper.GetAllGenres();
                                    const double countInCol = 5d;
                                    var start = 0;
                                    var finish = countInCol;
                                    int cycles = Convert.ToInt32(Math.Ceiling(genres.Length / countInCol));
                                }

                                @for (int i = 0; i < cycles; i++)
                                {
                                    <div class="dropdown-col d-flex flex-column">
                                        @for (int j = start; j < finish; j++)
                                        {
                                            <a asp-controller="Home" asp-action="Genre" asp-route-id="@genres[j]" class="nav-link w-100 h-100 p-2 user-menu-link">@genres[j]</a>
                                            <div class="dropdown-divider"></div>
                                        }
                                    </div>
                                    start += (int)countInCol;
                                    finish = finish + (int)countInCol > genres.Length ? genres.Length : finish + (int)countInCol;
                                }
                            </div>
                        </div>

                    </li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link text-light" asp-area="" asp-controller="Chat" asp-action="Index">Chat</a>
                        </li>
                    }

                    @if (User.IsInRole(AppConstants.Roles.SUPER_ADMIN) || User.IsInRole(AppConstants.Roles.ADMIN))
                    {
                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link text-light" asp-area="" asp-controller="Movie" asp-action="Index">Manage Movies</a>
                        </li>
                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Index">Manage Users</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown" id="menu-search">
                        <input type="search" id="source" class="form-control" placeholder="Movie search" />
                        <a class="d-none" href="#" id="dropdownResultButton" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Open Results
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownResultButton">
                        </div>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>

            </div>
        </div>
    </nav>

    <div class="container" id="root">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/circle-progress.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/autosize.js/4.0.2/autosize.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/playvideo.js"></script>
    <script src="~/js/ajaxSearch.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
